!RESTART pflotran-rst.chk 0.0 s

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
  /
END

SUBSURFACE


CHEMISTRY
  PRIMARY_SPECIES
    Tracer
  /
END

GRID
  TYPE structured
  BOUNDS
    0.0 0.0 0.0
    500.0 100.0 2000.0
  /
  ORIGIN 0.0 0.0 0.0
  NXYZ 5 1 20
  GRAVITY 0.0 0.0 -9.8068
END

TIME
  FINAL_TIME 0.5 y
  INITIAL_TIMESTEP_SIZE 60 s
  MAXIMUM_TIMESTEP_SIZE 86400 s
END

MATERIAL_PROPERTY matrix
  ID 1
  POROSITY 0.25
  TORTUOSITY 1.0
  PERMEABILITY
    PERM_X 1.0000000d-14
    PERM_Y 1.0000000d-14
    PERM_Z 1.0000000d-14
  /
  CHARACTERISTIC_CURVES SF1
END

CHARACTERISTIC_CURVES SF1
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.286
    ALPHA  1.9401D-4
    LIQUID_RESIDUAL_SATURATION 0.115
    MAX_CAPILLARY_PRESSURE 1.d+08
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.286
    LIQUID_RESIDUAL_SATURATION 0.115
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    M 0.286
    LIQUID_RESIDUAL_SATURATION 0.115
    GAS_RESIDUAL_SATURATION    -999.0
  /
END


OUTPUT
  PERIODIC TIME 0.01 y
  FORMAT HDF5
END

FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.0000000d-09
END

REGION all
  COORDINATES
    0.0 0.0 0.0
    500.0 100.0 2000.0
  END
END

REGION west
  FACE west
  COORDINATES
    0.0 0.0 0.0
    0.0 100.0 2000.0
  END
END

REGION east
  FACE east
  COORDINATES
    500.0 0.0 0.0
    500.0 100.0 2000.0
  END
END

DATASET liquid_pressure
  FILENAME ./liquid_pressure.h5
  HDF5_DATASET_NAME liquid_pressure
END

FLOW_CONDITION  initial
  TYPE
     PRESSURE hydrostatic
    #PRESSURE dirichlet
  END
     PRESSURE 101325.0
#    DATUM 0.0 0.0 2000.0
  END

FLOW_CONDITION  east
  TYPE
     PRESSURE  hydrostatic
    #PRESSURE  dirichlet
  END
    PRESSURE 101325.0
#    DATUM 0.0 0.0 2000.0
  END

FLOW_CONDITION west
  TYPE
    PRESSURE  dirichlet
  END
    PRESSURE DATASET liquid_pressure
  END


TRANSPORT_CONDITION initial
  TYPE dirichlet
  CONSTRAINT_LIST
    0.0  initial
  END
END

TRANSPORT_CONDITION west
  TYPE dirichlet
  CONSTRAINT_LIST
    0.0  west
  END
END

INITIAL_CONDITION
  FLOW_CONDITION initial
  TRANSPORT_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION west
  FLOW_CONDITION west
  TRANSPORT_CONDITION west
  REGION west
END

BOUNDARY_CONDITION east
  FLOW_CONDITION east
  TRANSPORT_CONDITION initial
  REGION east
END

STRATA
  REGION all
  MATERIAL matrix
END

CONSTRAINT initial
  CONCENTRATIONS
    Tracer  1.0000000d-08  T
  /
END

CONSTRAINT west
  CONCENTRATIONS
    Tracer  1000.0  T
  /
END

END_SUBSURFACE
